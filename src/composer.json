{
    "name": "someson/phalcon5-docker",
    "description": "dockerized application based on phalcon framework 5.x",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "7.4.*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-phalcon": "^5",
        "symfony/filesystem": "5.4.x-dev"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/module-db": "^1.2",
        "codeception/module-filesystem": "^1.0",
        "codeception/module-phalcon5": "^1.0",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-rest": "^1.4",
        "codeception/module-webdriver": "^1.4",
        "codeception/verify": "^0.4",
        "phalcon/ide-stubs": "v5.0.0-RC1",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Library\\": "library/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/",
            "Tests\\Library\\Unit\\": "library/tests/unit/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"file_exists('tests/.env') || copy('tests/.env.example', 'tests/.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "dev"
}
